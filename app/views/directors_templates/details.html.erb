<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@target_director.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@target_director.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@target_director.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@target_director.image%>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@target_director.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@target_director.updated_at)%> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tbody>
  <tr>
    <th>
      ID
    </th>
    <th>
      Image
    </th>
    <th>
      Title
    </th>
    <th>
      Year
    </th>
    <th>
      Director
    </th>
    <th>
    </th>
  </tr>
  <% @director_movies.each do |film| %>
    <tr>
      <td>
        <%=film.id%>
      </td>

      <td>
        <img src="<%=film.image%>" style="width:250px;">
      </td>

      <td>
        <%=film.title%>
      </td>

      <td>
        <%=film.year%>
      </td>

      <td>
        <%=@target_director.name%>
      </td>

      <td>
        <a href="/movies/<%=film.id%>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>%>

</tbody></table>

  

</body>
